  <script>
    async function atualizarStatus() {
      const resp = await fetch('/status');
      const data = await resp.json();

      document.getElementById('deriv').textContent = data.deriv_connected ? '🟢 Online' : '🔴 Offline';
      document.getElementById('quotex').textContent = data.quotex_connected ? '🟢 Online' : '🔴 Offline';
      document.getElementById('iq').textContent = data.iq_connected ? '🟢 Online' : '🔴 Offline';
      document.getElementById('symbols').textContent = data.symbols_tracked.join(', ');
    }

    setInterval(atualizarStatus, 5000);
    window.onload = atualizarStatus;
  </script>
